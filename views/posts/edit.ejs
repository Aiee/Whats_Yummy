<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center"><h1>Edit <%=post.name %> </h1></div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/posts/<%= post._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.name%>" name="post[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.image%>" name="post[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.tags%>" name="post[tags]">
                </div>
                <div class="form-group shadow-textarea">
                    <textarea class="form-control z-depth-1" type="text" rows="3" name="post[description]"><%= post.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
                <a href="/posts/<%=post._id%>" class="text-center">go back</a>

            </form>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>